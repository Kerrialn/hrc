{% extends 'base.html.twig' %} {% block title %}Dashboard{% endblock %} {% block
body %}
<div class="row justify-content-center">
  <div class="col-md-8">
    <ul class="list-group mb-3">
      <li class="list-group-item between">
        <div class="fs-4">Matches</div>
      </li>
      {% for match in pairs %}
      <li class="list-group-item d-flex justify-content-between">
        <div>
          <div>{{ match.vacancy.owner.name }}</div>
          <h5 class="m-0">
            {{ match.vacancy.position }}
          </h5>
          {{ match.vacancy.category.title }}
        </div>
        <div>{{ match.createdAtForHumans }}</div>
      </li>
      {% else %}
      <li class="list-group-item text-center p-3">
        <div class="card">
          <div class="card-body">
            <div class="text-center text-muted mb-3">
              <h5>Sorry :/</h5>
              No matches found yet. Keep trying, you'll find your match.
            </div>
          </div>
        </div>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endblock %}
