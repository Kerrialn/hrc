{% extends 'base.html.twig' %} {% block title %}Create{% endblock %} {% block
body %}
<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header fs-3 bg-transparent between">
        <div>Create experice</div>
        <div>{{ resume.name }}</div>
      </div>

      {{ form_start(experienceForm) }}
      <div class="card-body">
        {{ form_row(experienceForm.title) }}
        {{ form_row(experienceForm.company) }}
        <div class="d-flex justify-content-between">
          <div>
            {{ form_row(experienceForm.startedAt) }}
          </div>
          <div>
            {{ form_row(experienceForm.completedAt) }}
          </div>
        </div>
        <div class="mt-3">{{ form_row(experienceForm.isCurrent) }}</div>
      </div>
      <div class="card-footer bg-transparent text-end">
        <button type="submit" class="btn btn-outline-dark">save</button>
      </div>
      {{ form_end(experienceForm) }}
    </div>
  </div>
</div>
{% endblock %}
